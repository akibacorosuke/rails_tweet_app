<div class="main users-new">
  <div class="container">
    <div class="form-heading">New user register</div>
    <div class="form users-form">
    	
      <div class="form-body">
    <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
    <% end %>
    <%= form_tag("/users") do %>
        <p>user name</p>
        <input name="name"><!-- #name属性の値が送信されるハッシュのキーになる-->
        
        <p>email address</p>
        <input name="email">

        <p>password</p>
        <input type="password" name="password" value="<%= @user.password%>">


    
        <input type="submit" value="create">
      </div>
    <% end %> 
    </div>
  </div>
</div>