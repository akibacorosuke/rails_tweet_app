<div class="main posts-item">
    <div class="container">
		<h1 class="form-heading">POST SOMETHING!!</h1>
		<% #createアクションで受け取った投稿データをデータベースに保存する%>	
		<% #createアクションに飛ばす%>
		<%= form_tag("/posts") do %>
      <div class="form">
        <div class="form-body">
        	<% @post.errors.full_messages.each do |message| %>
	          <div class="form-error"> 
	          	<%= message %> 
	          	<%#saveメソッドを呼び出した際にvalidationに失敗すると自動的にメッセージが生成される%>
	          </div>
            <% end %>
          <textarea name="content"></textarea>
          <input type="submit" value="post">
        </div>
      </div>
    <% end %>
    </div>
</div>